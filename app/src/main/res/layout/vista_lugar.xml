<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B9EC9">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         HEADER: fondo cielo con nombre y tipo
         â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="52dp"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="0dp">

        <!-- Tipo del lugar (subtÃ­tulo pequeÃ±o) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/logo_tipo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/otros"
                android:contentDescription="tipo"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de lugar"
                android:textSize="13sp"
                android:textColor="#CCE8FFFF"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.04"/>
        </LinearLayout>

        <!-- Nombre grande -->
        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del lugar"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         CARD BLANCA flotante
         â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:fillViewport="true"
        android:overScrollMode="never">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="36dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="28dp"
                android:paddingBottom="32dp">

                <!-- â”€â”€ FOTO â”€â”€ -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/foto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="fotografÃ­a"
                            android:scaleType="centerCrop"
                            android:background="#F2F7FA"
                            android:src="@drawable/foto_epsg"/>

                        <!-- Botones de foto sobre la imagen -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:background="@drawable/circulo_blanco_semi"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:onClick="tomarFoto"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/ic_menu_camera"
                                    android:contentDescription="cÃ¡mara"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:background="@drawable/circulo_blanco_semi"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:onClick="ponerDeGaleria"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/ic_menu_gallery"
                                    android:contentDescription="galerÃ­a"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:background="@drawable/circulo_rojo_semi"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:onClick="eliminarFoto"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                                    android:contentDescription="eliminar foto"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- â”€â”€ VALORACIÃ“N â”€â”€ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <RatingBar
                        android:id="@+id/valoracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:progressTint="#5BC8C8"
                        android:secondaryProgressTint="#D0EEEE"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/fecha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01/01/2025"
                            android:textSize="11sp"
                            android:textColor="#A0B4C8"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/hora"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:00"
                            android:textSize="11sp"
                            android:textColor="#A0B4C8"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- â”€â”€ DIRECCIÃ“N â”€â”€ -->
                <LinearLayout
                    android:id="@+id/rowDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/fila_opcion_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="verMapa"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circulo_acento"
                        android:layout_marginEnd="14dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DIRECCIÃ“N"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:letterSpacing="0.15"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/direccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DirecciÃ³n del lugar"
                            android:textSize="14sp"
                            android:textColor="#1C2B3A"
                            android:fontFamily="sans-serif"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo_direccion"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="mapa"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- â”€â”€ TELÃ‰FONO â”€â”€ -->
                <LinearLayout
                    android:id="@+id/rowTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/fila_opcion_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="llamarTelefono"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circulo_acento"
                        android:layout_marginEnd="14dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TELÃ‰FONO"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:letterSpacing="0.15"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/telefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="000 000 0000"
                            android:textSize="14sp"
                            android:textColor="#1C2B3A"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo_telefono"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:contentDescription="llamar"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- â”€â”€ URL â”€â”€ -->
                <LinearLayout
                    android:id="@+id/rowUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/fila_opcion_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="verPgWeb"
                    android:clickable="true"
                    android:focusable="true">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circulo_acento"
                        android:layout_marginEnd="14dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SITIO WEB"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:letterSpacing="0.15"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="https://..."
                            android:textSize="14sp"
                            android:textColor="#1C2B3A"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo_url"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:contentDescription="web"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- â”€â”€ COMENTARIO â”€â”€ -->
                <LinearLayout
                    android:id="@+id/rowComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:background="@drawable/fila_opcion_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="28dp"
                        android:background="@drawable/circulo_acento"
                        android:layout_marginEnd="14dp"
                        android:layout_marginTop="2dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMENTARIO"
                            android:textSize="9sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:letterSpacing="0.15"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/comentario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comentario del lugar"
                            android:textSize="14sp"
                            android:textColor="#1C2B3A"
                            android:fontFamily="sans-serif"
                            android:lineSpacingMultiplier="1.4"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/logo_comentario"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="comentario"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <!-- â”€â”€ BOTONES DE ACCIÃ“N â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCIONES"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:letterSpacing="0.15"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"/>

                <!-- Fila 1: CÃ³mo llegar + Trazar ruta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/btnLlegar"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:background="@drawable/btn_cancelar_bg"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“  Llegar"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnRuta"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:gravity="center"
                        android:background="@drawable/btn_guardar_bg"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:elevation="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ—ºï¸  Ruta"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Fila 2: Compartir + Editar + Borrar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/btnCompartir"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:background="@drawable/fila_opcion_bg"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â†—"
                            android:textSize="18sp"
                            android:textColor="#5BC8C8"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Compartir"
                            android:textSize="10sp"
                            android:textColor="#8FA8BE"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnEditar"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:background="@drawable/fila_opcion_bg"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ"
                            android:textSize="18sp"
                            android:textColor="#5BC8C8"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Editar"
                            android:textSize="10sp"
                            android:textColor="#8FA8BE"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnBorrar"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/fila_opcion_bg"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ—‘"
                            android:textSize="18sp"
                            android:textColor="#E57373"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Borrar"
                            android:textSize="10sp"
                            android:textColor="#8FA8BE"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</RelativeLayout>