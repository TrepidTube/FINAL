<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <!-- Icono del tipo de lugar en círculo teal -->
        <LinearLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circulo_icono_lista"
            android:gravity="center"
            android:layout_marginEnd="14dp">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="tipo de lugar"
                android:src="@drawable/otros"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- Nombre, dirección, distancia -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del lugar"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#1C2B3A"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección"
                android:textSize="12sp"
                android:textColor="#8FA8BE"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="6dp"/>

            <RatingBar
                android:id="@+id/valoracion"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.5"
                android:progressTint="#5BC8C8"
                android:secondaryProgressTint="#D8EEF0"/>
        </LinearLayout>

        <!-- Distancia en pill + flecha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pill_distancia"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="... km"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Flecha circular -->
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circulo_acento_btn"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="›"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>